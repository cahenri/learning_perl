#!/usr/bin/perl -w
use v5.028;
use utf8;

my $number = int(1 + rand 100);
say "Guess a number between 1 and 100";
while (1) {
	chomp (my $guess = <STDIN>);
	if ($guess =~ /quit|exit|^\s*$/i) {
		last;
	} elsif ($guess < $number) {
		say "Too low";
	} elsif ($guess > $number) {
		say "Too high";
	} elsif ($guess == $number) {
		say "Congratz! You guessed it right.";
		last;
	}
}
